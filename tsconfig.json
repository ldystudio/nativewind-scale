{
  "compilerOptions": {
    "rootDir": "./src",
    "strict": true,
    "allowJs": true,
    "esModuleInterop": true,
    "jsx": "react-native",
    "lib": ["DOM", "ESNext"],
    "moduleResolution": "Node16",
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "target": "ESNext",
    "declaration": true,
    "module": "Node16",
    "outDir": "dist"
  },
  "include": [
    "./src/**/*.ts",
  ]
}